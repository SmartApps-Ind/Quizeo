<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialogbg"
    android:padding="18.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ProgressBar
        android:id="@+id/createaccprogressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:progressBarStyleLarge"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ac_linearlogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30.0sp"
            android:textColor="#ffece2e2"
            android:id="@+id/createaccounttext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create Account."/>

        <EditText
            android:id="@+id/acc_username"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48.0dip"
            android:hint="USERNAME"
            android:maxLines="1"
            android:inputType="textPersonName"/>

        <AutoCompleteTextView
            android:id="@+id/ac_emaillogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:minHeight="48.0dip"
            android:hint="@string/email_add"
            android:maxLines="1" android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/acc_loginpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:minHeight="48.0dip"
            android:hint="@string/passwordhint"
            android:maxLines="1"
            android:inputType="textPassword"/>

        <com.google.android.material.button.MaterialButton
            android:id="@id/createaccountbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:background="@android:color/primary_text_light_nodisable"
            android:text="@string/create_account"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>