<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ff141a33"
    android:padding="18.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ProgressBar
        android:id="@+id/loginprogressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:progressBarStyleLarge"/>

    <LinearLayout android:orientation="vertical"
        android:id="@+id/linearlogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:textSize="60.0sp"
            android:textColor="#ffece2e2"
            android:id="@+id/createtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN."/>

        <AutoCompleteTextView
            android:id="@+id/emaillogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48.0dip"
            android:hint="@string/email_hint"
            android:maxLines="1" android:inputType="textEmailAddress"/>

        <EditText android:textStyle="bold"
            android:id="@+id/loginpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:layout_marginBottom="30.0dip"
            android:minHeight="48.0dip"
            android:hint="@string/passwordhint"
            android:maxLines="1"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:background="@android:color/transparent"
            android:text="@string/logintext"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/loginor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginor"
            android:fontFamily="@font/roboto_medium"/>

        <Button
            android:id="@+id/createaccountbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:background="@android:color/transparent"
            android:text="@string/createtext"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>